{{#partial "content"}}
    {{#if editAlbum}}
        <h1>Edit Details for {{album.name}}</h1>
        <form action="/albums/{{album.id}}" method="post">
            <br>
            <label for="name">Album Name</label>
            <input id="newAlbumName" name="newAlbumName" type="text" value="{{album.name}}">
            <br>
            <label for="releaseDate">Album Release Date</label>
            <input id="newAlbumReleaseDate" name="newAlbumReleaseDate" type="text" value="{{album.releaseDate}}">
            <br>
            <label for="tracks">Album Release Date</label>
            <input id="newAlbumTracks" name="newAlbumTracks" type="text" value="{{album.tracks}}">
            <br>
            <label for="imageUrl">Album Release Date</label>
            <input id="newAlbumImageUrl" name="newAlbumImageUrl" type="text" value="{{album.imageUrl}}">
            <br>
            <label for="artistId">Update Artist:</label>
            <select id="newAlbumArtistId" name="newAlbumArtistId">
                {{#each artist}}
                    <option value="{{id}}">{{name}}</option>
                {{/each}}
            </select>
            <p>Don't see the right artist?<a href="/artists/new">Add 'em.</a></p>
            <button type="submit" class="btn btn-default">Save Changes</button>
        </form>
    {{else}}
        <h2>Add a new Album!</h2>
        <form action="/albums" method="post">
            {{#if artists}}
                <label for="name">Album Name</label>
                <input id="name" name="name" type="text">
                <br>
                <label for="releaseDate">Album Release Date</label>
                <input id="releaseDate" name="releaseDate" type="text">
                <br>
                <label for="tracks">Album tracks (separate with semicolon)</label>
                <input id="tracks" name="tracks" type="text" placeholder="Ex. Hound Dog; All Shook Up; etc...">
                <br>
                <label for="imageUrl">Album tracks (separate with semicolon)</label>
                <input id="imageUrl" name="imageUrl" type="text" placeholder="http://www.imagehost.com/imasgeId.jpg">
                <br>
                <label for="artistId">Album Artist:</label>
                <select id="artistId" name="artistId">
                    {{#each artists}}
                        <option value="{{id}}">{{name}}</option>
                    {{/each}}
                </select>
                <p>Don't see the right artist?<<a href="/artists/new">Add 'em.</a></p>
            {{else}}
                <h3> You'll need to add an artist before you add an album. <a href="/artists/new">Add one here.</a> </h3>
            {{/if}}
            <button type="submit" class="btn btn-default">Add Album</button>
        </form>
    {{/if}}
{{/partial}}

{{> layout.hbs}}